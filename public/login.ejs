        <span class="col-md-1"></span>
        <div class="container col-md-10" style="padding-top:25px">
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>
            <form action='/login' method='post'>
                <div class="form-group">
                        <label>Email: </label>
                        <input type="email" class="form-control" name="email" ng-model=loginCtrl.email required>
                </div>
                <div class="form-group">
                        <label>Password: </label>
                        <input type="password" class="form-control" name="password" ng-model=loginCtrl.password required>
                </div>

                <button type="submit" class="btn btn-warning btn-lg">Login</button>
            </form>
        </div>
        
        
        
        
